{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"]
  },
  "provider": {
    "Tencent-Deepseek": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Tencent-Deepseek",
      "options": {
        "baseURL": "https://api.lkeap.cloud.tencent.com/v1"
      },
      "models": {
        "deepseek-v3.2": {
          "name": "deepseek-v3.2",
          "cost": {
            "input": 2.0,
            "output": 3.0
          },
          "limit": {
            "context": 128000,
            "input": 96000,
            "output": 32000,
          },
          "options": {
            "enable_search": false,
            "thinking": {
              "type": "disabled"
            }
          }
        }
      }
    }
  }
}
