{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "plugin": [
    "oh-my-opencode@3.7.2"
  ],
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**"
    ]
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "provider": {
    "Tencent-Deepseek": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Tencent-Deepseek",
      "options": {
        "baseURL": "https://api.lkeap.cloud.tencent.com/v1"
      },
      "models": {
        "deepseek-v3.2": {
          "name": "Deepseek-Reasoner",
          "cost": {
            "input": 2,
            "output": 3
          },
          "limit": {
            "context": 128000,
            "input": 96000,
            "output": 32000
          },
          "options": {
            "enable_search": false,
            "thinking": {
              "type": "enabled"
            }
          }
        }
      }
    }
  }
}
